    <!-- Key Words Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/keyWordsCard"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#FFF9E6"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:id="@+id/keyWordsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key Words"
                android:textColor="#2E2157"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/keyWordsStreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Streak: "
                android:textColor="#FF9800"
                android:textSize="18sp"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/playKeyWordsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:textColor="@android:color/white"
                android:backgroundTint="#2E2157"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

