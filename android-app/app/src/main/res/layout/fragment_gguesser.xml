<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gguesser.GGuesserFragment"
    android:padding="12dp">

    <!-- Row: image | target name | fetch button -->
    <ImageView
        android:id="@+id/imageTargetCover"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="@string/target_cover"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTargetName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Target: (none)"
        android:textStyle="bold"
        android:textSize="16sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/imageTargetCover"
        app:layout_constraintEnd_toStartOf="@id/buttonFetchRandom"
        app:layout_constraintTop_toTopOf="@id/imageTargetCover" />

    <Button
        android:id="@+id/buttonFetchRandom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch Random"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@id/imageTargetCover"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search row: input + search button -->
    <EditText
        android:id="@+id/searchInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Search games by name..."
        android:imeOptions="actionSearch"
        android:minHeight="48dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonSearch"
        app:layout_constraintTop_toBottomOf="@id/imageTargetCover" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/searchInput"
        app:layout_constraintBottom_toBottomOf="@id/searchInput"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Error / progress -->
    <TextView
        android:id="@+id/textError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/searchInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textError"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textSearchEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No results"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textError"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Search results list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSearch"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textError"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textNoGuesses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No guesses yet"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/recyclerSearch"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Guess history list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerGuesses"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/recyclerSearch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
