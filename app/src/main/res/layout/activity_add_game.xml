<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Game Name -->
        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Game Name" />

        <!-- Genre Spinner -->
        <Spinner
            android:id="@+id/spinnerGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Platform MultiChoice -->
        <Button
            android:id="@+id/buttonSelectPlatforms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Platforms"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textViewSelectedPlatforms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No platforms selected"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp" />

        <!-- Release Year Picker -->
        <EditText
            android:id="@+id/editTextReleaseYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Release Year"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginTop="8dp" />

        <!-- Developer -->
        <EditText
            android:id="@+id/editTextDeveloper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Developer"
            android:layout_marginTop="8dp" />

        <!-- Publisher -->
        <EditText
            android:id="@+id/editTextPublisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Publisher"
            android:layout_marginTop="8dp" />

        <!-- Description -->
        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:layout_marginTop="8dp" />

        <!-- Budget -->
        <EditText
            android:id="@+id/editTextBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Budget"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp" />

        <!-- Saga -->
        <EditText
            android:id="@+id/editTextSaga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Saga"
            android:layout_marginTop="8dp" />

        <!-- POV Spinner -->
        <Spinner
            android:id="@+id/spinnerPOV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Clues -->

        <EditText
            android:id="@+id/editTextClue1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Clue 1" />

        <EditText
            android:id="@+id/editTextClue2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Clue 2"
            android:layout_marginTop="4dp"/>

        <EditText
            android:id="@+id/editTextClue3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Clue 3"
            android:layout_marginTop="4dp"/>

        <EditText
            android:id="@+id/editTextClue4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Clue 4 (optional)"
            android:layout_marginTop="4dp"/>

        <EditText
            android:id="@+id/editTextClue5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Clue 5 (optional)"
            android:layout_marginTop="4dp"/>

        <!-- Image Preview -->
        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:background="#DDDDDD"
            android:contentDescription="Cover Image Preview" />

        <!-- Cover Image Picker -->
        <EditText
            android:id="@+id/editTextCoverImagePath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tap to pick cover image"
            android:layout_marginTop="8dp"
            android:focusable="false"
            android:clickable="true" />

        <!-- Save Button -->
        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Game"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
